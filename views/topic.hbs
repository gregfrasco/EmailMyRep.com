<style>
.col-centered{
  text-align: center;
}
</style>
<script>
function changeText(newText)
{
  document.getElementById('description').value = newText;
}
</script>
<div class="container">
  <form method="POST" action="/topic" name="topicForm">
    <input type="hidden" name="_csrf" value="{{_csrf}}"/>
    <div class="row">
      <div class="col-centered">
        <h1>Select a Topic</h1>
        <hr />
      </div>
    </div>
    <div class="row">
      <!-- Templete List -->
      <div class="col-md-6">
        <label for="templates">Topics</label>
        <div class="well">
          {{#each topics}}
          <div class="radio">
            <label><input type="radio" name="topicID" onclick="changeText('{{this.description}}');" value="{{this.id}}">{{this.title}}</label>
          </div>
          {{/each}}
        </div>
      </div>
      <!-- Decription -->
      <div class="col-md-6">
        <label for="templates">Description</label><br />
        <textarea rows="10" cols="50" style="resize: none; border: none; outline: none; background-color: transparent; font-family: inherit; font-size: inherit;" type="text" name="doc-title" value="" id="description" autocomplete="off">
        </textarea>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4 col-centered">
         <input class="btn btn-lg btn-danger" type="submit" value="Select">
      </div>
    </div>
  </form>
</div>
