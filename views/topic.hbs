<style>
.col-centered{
  text-align: center;
}
</style>
<div class="container">
  <form>
    <div class="row">
      <div class="col-centered">
        <h1>Select a Topic</h1>
        <hr />
      </div>
    </div>
    <div class="row">
      <!-- Templete List -->
      <div class="col-md-6">
        <label for="templates">Topics</label>
        <div class="well">
          {{#each allTopics}}
          <div class="radio">
            <label><input type="radio" name="optradio">{{this.title}}</label>
          </div>
          {{/each}}
        </div>
      </div>
      <!-- Decription -->
      <div class="col-md-6">
        <label for="templates">Description</label>
        <p>
          description of topic
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 col-md-offset-4 col-centered">
        <a href="/template" class="btn btn-lg btn-danger">Select</a>
        <!--<button type="submit" class="btn btn-lg btn-danger">Select</button>-->
      </div>
    </div>
  </form>
</div>
